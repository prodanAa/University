#include <iostream>
#include <string>
using namespace std;
string word, maxword;
int main(){
	system("chcp 1251");
	do{
		cin >> word;
		if (word.size() > maxword.size())
			maxword = word;
	} while (word[word.size() - 1] != '.');
	cout << "Най - дългата дума е: " << maxword << endl;
	system("pause");
	return 0;
}
