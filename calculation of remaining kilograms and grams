#include<iostream>
using namespace std;
int nk, ng, pk, pg, ok, og;
int main(){
	system("chcp 1251");
	cout << "Налично количество килограми и грамове ";
	cin >> nk >> ng;
	cout << "Продадено количество ";
	cin >> pk, pg;
	ng = nk * 1000 + ng;
	pg = pk * 1000 + pg;
	og = ng - pg;
	ok = og / 1000;
	og = og % 1000;
	cout << ("Останали са: ") << ok << " kg " << og << " гр.\n";
	system("pause");
	return 0;
}
