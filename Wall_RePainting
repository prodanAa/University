#include <iostream>//Директива за предаване
#include<cmath>//Дирецтива за включване на математическа библиотека 
using namespace std;
int br; //Необходимия брой на кутийте боя за пребоядисване
float l, h, S, m;
int main() {
	system("chcp 1251");//Библииотека за кирилизация
	cout << "Въведете височината и дължината на стената\n";// Извеждащо съобщение на конзолния прозорец за потребителя
	cin >> l >> h; // Въвеждане на страните на правоъгълника
	cout << "Въведете площа площа която е покривана с една кутия боя\n";
	cin >> m; // Поща която покрива една кутия
	S = l * h; // Формулата за намиране на лицето (кв.метри)
	br = (S / m); // Изчисляваме броя на необходимите кутий боя като лицето разделим на едната кутия(общите квадратни разделим на покривните 
	// квадратни метра от едната кутия боя) 
	cout << "Необходими са: " << br << "кутий боя"; // Извеждане на съобщението + резултата 
	system("pause");
	return 0; 
}
